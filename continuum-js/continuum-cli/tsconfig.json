{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "esnext",
        "skipLibCheck": true
    },
    "lib": [
        "esnext"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
}
